<div class="m-4">
<h1>My Tasks</h1>

<ul class = "list-unstyled m-4">
  <% @tasks.each do |task| %>
    <%= link_to task_path(task) do %>
    <div class="d-flex">
      <li class="text-decoration-none"><i class="fa-regular fa-square" style="color: #000000;"></i>  <%= task.title %>
      </li>
      <p class="" ><%= link_to "Delete this task", task_path(task),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
      %></p>
      </div>
    <% end %>
  <% end %>
</ul>

<%= link_to "Add new task", new_task_path %>
</div>
